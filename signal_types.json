      { "label": "Фаза (°)", "key": "phase", "default": 0.0 },
      { "label": "Затухание", "key": "damping", "default": 0.5 }
    ],
    "equation": "amplitude * numpy.exp(-damping * time) * numpy.sin(2 * numpy.pi * frequency * time + phase_rad)"
  }
